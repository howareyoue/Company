<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="CustomButtonStyle">
        <item name="android:layout_width">118dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@color/buttonColor</item> <!-- 색상 리소스 참조 -->
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_margin">8dp</item>
    </style>


    <style name="defaultButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <style name="urgentButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>
</resources>